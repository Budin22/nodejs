<h1>Add new courses</h1>

<form action="/add" method="POST">
    <div class="row">
        <div class="input-field">
            <input id="title" name="title" type="text" class="validate" required>
            <label for="title">Courses name</label>
            <span class="helper-text" data-error="Write name"></span>
        </div>
        <div class="input-field">
            <input id="price" name="price" type="number" class="validate" min="1" required>
            <label for="price">Price</label>
            <span class="helper-text" data-error="Write price"></span>
        </div>
        <div class="input-field">
            <input id="img" name="img" type="text" class="validate" required>
            <label for="img">URl of img</label>
            <span class="helper-text" data-error="Write url of img"></span>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Add courses</button>
</form>
