<h1>Setting course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}">
        <label for="title">Courses name</label>
        <span class="helper-text" data-error="Write name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="1"  value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Write price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate"  value="{{course.img}}">
        <label for="img">URl of img</label>
        <span class="helper-text" data-error="Write url of img"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary" type="submit">Setting courses</button>
</form>
